<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.laicooper.bealibtest.MainActivity">

    <TextView
        android:id="@+id/statusView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/butRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startRecord"
            android:text="Record"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/butRssiStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startMeasuring"
            android:text="Compute"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/butWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startWrite"
            android:text="Write"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/butCloseWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="closeWrite"
            android:text="Close"
            android:textAllCaps="false" />

    </LinearLayout>


    <Spinner
        android:id="@+id/spinnerMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textRssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="" />

</LinearLayout>
